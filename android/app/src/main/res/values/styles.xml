<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- Default theme for the app after launch. -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--
    This is the classic splash screen theme, with the critical override
    to disable the new Android 12 icon system.
    -->
    <style name="AppTheme.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- This sets your full-screen image as the background -->
        <item name="android:windowBackground">@drawable/splash</item>

        <!-- This is the definitive fix: It tells the new system to NOT draw its icon. -->
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
    </style>
</resources>
